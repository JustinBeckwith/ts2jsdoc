{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/*.ts"
  ]
}
